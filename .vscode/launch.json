{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "env": {
        "ENV": "development",
        "PORT": "8080",
        "MONGO_URI": "mongodb://localhost:27017",
        "MONGO_DB": "control_financiero",
        "JWT_SECRET": "dev-secret-key",
        "JWT_EXPIRATION": "15m",
        "REFRESH_EXPIRATION": "168h"
      },
      "args": [],
      "showLog": true,
      "preLaunchTask": "go: build"
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Debug Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "args": [
        "-test.v"
      ]
    }
  ]
}
